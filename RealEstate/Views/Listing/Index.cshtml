@model List<Listing>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                All Listings
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Listing" asp-action="Create" class="btn btn-primary">
                + Create New Listing
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Price))
            {
                <tr>
                    <td>@obj.HouseNumber @obj.Road, @obj.ZIP</td>
                    <td>@obj.City</td>
                    <td>@obj.State</td>
                    <td>@obj.Price</td>
                    <td>
                        <div class=" w-80 btn-group">
                            <a asp-controller="Listing" asp-action="Details" asp-route-id="@obj.Id" class=" btn btn-primary mx-2">Details</a>
                            <a asp-controller="Listing" asp-action="Edit" asp-route-id="@obj.Id" class=" btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Listing" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>