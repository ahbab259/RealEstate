@model Listing

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb2">
            <h2 class="text-primary">Edit Listing</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="HouseNumber"></label>
            <input asp-for="HouseNumber" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Road"></label>
            <input asp-for="Road" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="ZIP"></label>
            <input asp-for="ZIP" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="City"></label>
            <input asp-for="City" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="State"></label>
            <input asp-for="State" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Country"></label>
            <input asp-for="Country" type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="text" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Listing" asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
</form>
